@model Agency.ViewModels.PersonDetailViewModel
@*Person Details*@
<form method="post" class="user row mt-3" enctype="multipart/form-data">
    <div class="row">
        <h1 class="text-center">Profile Preview:</h1>
        <section class="col-md-6 mt-3">
            <div class="form-group">
                <h6>First Name: </h6>
                <input disabled placeholder="e.q. Smith" asp-for="FirstName" />
            </div>
            <div class="form-group">
                <h6>Last Name: </h6>
                <input disabled placeholder="e.q. Cottage" asp-for="LastName" />
            </div>
            <div class="form-group">
                <h6>Birth Date: </h6>
                <input disabled placeholder="e.q. 27/12/1996" asp-for="Date" />
            </div>
        </section>
    </div>

    <section class="col-md-6 mt-3">
        <div class="form-group">
            <h6>Location:</h6>
            <hr>
            <select disabled id="CountryId" asp-for="Address.CountryId" asp-items="Model.Address.Countries" , class="form-control"></select>
        </div>
        <div class="form-group">
            <select disabled id="CityId" asp-for="Address.CityId" asp-items="Model.Address.Cities" , class="form-control"></select>
        </div>
        <div class="form-group">
            <h6>Address: </h6>
            <hr>
            <div class="d-flex justify-content-around">
                <input disabled placeholder="e.q. Smith Cottage" asp-for="Address.Name" class="form-control rounded-left-0" />
                @if (Model.Address.Number == 0)
                {
                    <input disabled type="number" placeholder="e.g. 7" asp-for="Address.Number" value="" class="flex-md-grow-1 form-control rounded-right-0" />
                }
                else
                {
                    <input disabled placeholder="e.g. 7" asp-for="Address.Number" class="flex-md-grow-1 form-control rounded-right-0" />
                }
            </div>
        </div>
    </section>

    <div class="col-12 pt-3">
        @*<div class="d-flex justify-content-center align-items-center">
            *@
    @*<button class="btn btn-primary btn-user" type="submit" id="button">Save</button>*@

            <button class="btn btn-light btn-user">Back</button>

    </div>
</form>

